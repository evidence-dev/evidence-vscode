{
  "name": "evidence-vscode",
  "displayName": "Evidence",
  "description": "Evidence language support for VS Code",
  "version": "1.1.0",
  "private": true,
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Data Science",
    "Programming Languages",
    "Other"
  ],
  "publisher": "Evidence",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evidence-dev/evidence-vscode.git"
  },
  "keywords": [
    "evidence",
    "vscode",
    "data",
    "analytics",
    "sql",
    "markdown"
  ],
  "bugs": {
    "url": "https://github.com/evidence-dev/evidence-vscode/issues"
  },
  "homepage": "https://evidence.dev",
  "icon": "icons/evidence-logo.png",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:emd",
    "onLanguage:markdown",
    "onLanguage:javascript",
    "onLanguage:json",
    "onLanguage:svelte",
    "workspaceContains:**/package.json",
    "onView:simpleBrowser.view",
    "onCommand:evidence.newProject",
    "onCommand:evidence.createProjectFromTemplate",
    "onCommand:evidence.openSettings",
    "onCommand:evidence.installDependencies",
    "onCommand:evidence.updateDependencies",
    "onCommand:evidence.clearCache",
    "onCommand:evidence.startServer",
    "onCommand:evidence.stopServer",
    "onCommand:evidence.preview",
    "onCommand:evidence.viewSettings",
    "onCommand:evidence.build",
    "onCommand:evidence.buildStrict",
    "onCommand:evidence.showOutput"
  ],
  "contributes": {
    "commands": [
      {
        "command": "evidence.newProject",
        "title": "New Evidence Project",
        "category": "Evidence"
      },
      {
        "command": "evidence.createProjectFromTemplate",
        "title": "Create Project from Template",
        "category": "Evidence"
      },
      {
        "command": "evidence.openSettings",
        "title": "Open Settings File",
        "category": "Evidence",
        "enablement": "evidence.hasProject"
      },
      {
        "command": "evidence.installDependencies",
        "title": "Install Dependencies",
        "category": "Evidence",
        "enablement": "evidence.hasProject"
      },
      {
        "command": "evidence.updateDependencies",
        "title": "Update to Latest Version",
        "category": "Evidence",
        "enablement": "evidence.hasProject"
      },
      {
        "command": "evidence.startServer",
        "title": "Start Dev Server",
        "category": "Evidence",
        "enablement": "evidence.hasProject"
      },
      {
        "command": "evidence.stopServer",
        "title": "Stop Dev Server",
        "category": "Evidence",
        "enablement": "evidence.hasProject"
      },
      {
        "command": "evidence.preview",
        "title": "Preview",
        "category": "Evidence",
        "icon": "$(preview)",
        "enablement": "evidence.hasProject"
      },
      {
        "command": "evidence.viewSettings",
        "title": "View Settings",
        "category": "Evidence"
      },
      {
        "command": "evidence.clearCache",
        "title": "Clear Cache",
        "category": "Evidence",
        "enablement": "evidence.hasProject"
      },
      {
        "command": "evidence.build",
        "title": "Build",
        "category": "Evidence",
        "enablement": "evidence.hasProject"
      },
      {
        "command": "evidence.buildStrict",
        "title": "Build Strict",
        "category": "Evidence",
        "enablement": "evidence.hasProject"
      },
      {
        "command": "evidence.showOutput",
        "title": "Show Output",
        "category": "Evidence",
        "enablement": "evidence.hasProject"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "evidence.newProject",
          "group": "navigation",
          "when": "explorerResourceIsFolder && !isVirtualResource"
        },
        {
          "command": "evidence.preview",
          "when": "resourceLangId == emd",
          "group": "navigation"
        },
        {
          "command": "markdown.showPreview",
          "when": "resourceLangId == emd",
          "group": "navigation"
        },
        {
          "command": "markdown.showPreviewToSide",
          "when": "resourceLangId == emd",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "evidence.preview",
          "when": "resourceLangId == emd",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "evidence.preview",
          "when": "resourceLangId == emd",
          "group": "navigation"
        },
        {
          "command": "markdown.showPreview",
          "when": "!notebookEditorFocused && resourceLangId == emd",
          "group": "1_open"
        },
        {
          "command": "markdown.showPreviewToSide",
          "when": "!notebookEditorFocused && resourceLangId == emd",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "evidence.preview",
          "when": "never"
        }
      ]
    },
    "configuration": {
      "title": "Evidence",
      "type": "object",
      "properties": {
        "evidence.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Autostart Evidence dev server when VS Code opens Evidence project workspace."
        },
        "evidence.defaultPort": {
          "type": "number",
          "default": 3000,
          "description": "Default Evidence dev server port."
        },
        "evidence.templateProjectUrl": {
          "type": "string",
          "default": "/template",
          "description": "Evidence template project GitHub URL or local file:// path to the project template folder to use when creating new Evidence projects. Defaults to the built-in Evidence extension /template project Url."
        }
      }
    },
    "languages": [
      {
        "id": "emd",
        "aliases": [
          "Evidence Markdown",
          "emd"
        ],
        "extensions": [
          ".md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "emd",
        "scopeName": "text.html.markdown.svelte",
        "path": "./syntaxes/emd.tmLanguage.json",
        "embeddedLanguages": {
          "source.svelte": "svelte",
          "source.js": "javascript",
          "text.html.markdown": "markdown",
          "meta.tag.svelte": "svelte",
          "meta.embedded.block.sql": "sql",
          "markup.fenced_code.block.markdown": "sql"
        }
      },
      {
        "scopeName": "markdown.sql.codeblock",
        "path": "./syntaxes/markdown-sql.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.sql": "sql"
        }
      }
    ],
    "configurationDefaults": {
      "[emd]": {
        "editor.wordWrap": "on",
        "editor.suggest.showWords": false,
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": false
        },
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.quickSuggestionsDelay": 300,
        "editor.acceptSuggestionOnEnter": "off"
      }
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/emd.code-snippets"
      },
      {
        "language": "svelte",
        "path": "./snippets/svelte.code-snippets"
      },
      {
        "language": "sql",
        "path": "./snippets/sql.code-snippets"
      },
      {
        "language": "javascript",
        "path": "./snippets/js.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "extensionDependencies": [
    "svelte.svelte-vscode"
  ],
  "dependencies": {
    "tiged": "^2.12.5",
    "vsce": "^2.11.0"
  }
}
